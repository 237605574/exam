<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace指定我们的到具体的bean -->
<mapper namespace="com.gaokao.dao.UserDao">
    <resultMap id="UserObj" type="com.gaokao.entity.UserObj">
        <id column="user_id" property="id"/>
        <result column="user_name" property="name"/>
        <result column="password" property="password"/>
        <result column="authority" property="authority"/>
    </resultMap>
    <select id="getUser" resultMap="UserObj">
        SELECT *
        FROM
        `user`
        WHERE
        `user_name` = #{userName};
    </select>
    <insert id="insert">
        INSERT ignore INTO
        `user`
        (`user_name`,`password`)
        VALUES (#{name},#{password})
    </insert>
    <update id="pay">
        UPDATE
        `user`
        SET authority = 1, vip_end_date = #{payDays}
        WHERE `user_name` = #{userName};
    </update>
    <update id="updateVipState">
        UPDATE
        `user`
        SET authority = 0
        WHERE
        NOW() > vip_end_date and  authority != 0;
    </update>
</mapper>